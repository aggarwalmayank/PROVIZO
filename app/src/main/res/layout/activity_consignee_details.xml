<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/deliverylocation"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".SignUpSecond">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="#EBEEF1">

        <ImageView
            android:id="@+id/first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:src="@drawable/first_new" />

        <ImageView
            android:id="@+id/menuicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:src="@drawable/menuicon"/>

        <TextView
            android:id="@+id/appnamesignupsecond"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="90dp"
            android:paddingStart="20dp"
            android:paddingLeft="20dp"
            android:paddingEnd="20dp"
            android:paddingRight="20dp"
            android:text="@string/app_name"
            android:textColor="#000000"
            android:textSize="45sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:layout_above="@id/third"
            android:layout_below="@id/first"
            android:layout_centerInParent="true">

            <EditText
                android:id="@+id/consigneename"
                android:maxLines="1"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:drawableLeft="@drawable/loginid"
                android:gravity="center"
                android:hint="Consignee Name"
                android:inputType="text" />

            <EditText
                android:id="@+id/consigneeadd"
                android:layout_width="300dp"
                android:maxLines="1"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/calendaricon"
                android:gravity="center"
                android:hint="Consignee Address"
                android:inputType="text" />

            <EditText
                android:id="@+id/consigneephone"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/phone"
                android:gravity="center"
                android:maxLines="1"
                android:hint="Consignee Mobile Number"
                android:inputType="number"
                android:maxLength="10"/>

            <EditText
                android:id="@+id/consigneegst"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:maxLines="1"
                android:drawableLeft="@drawable/gst"
                android:gravity="center"
                android:maxLength="15"
                android:hint="Consignee GST Number"
                android:inputType="text" />

            <ImageButton
                android:id="@+id/pay"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:background="@drawable/ripple_effect_2"
                android:clickable="false"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/right_pointer" />

        </LinearLayout>

        <ImageView
            android:id="@+id/third"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:scaleType="centerCrop"
            android:src="@drawable/third" />

        <ImageView
            android:layout_alignParentBottom="true"
            android:layout_width="290dp"
            android:layout_marginLeft="180dp"
            android:layout_marginBottom="-80dp"
            android:layout_height="290dp"
            android:src="@drawable/truck1"/>
    </RelativeLayout>
</LinearLayout>
<android.support.design.widget.NavigationView
android:layout_width="wrap_content"
android:layout_height="match_parent"
app:menu="@menu/navigation_menu"
android:background="#c8dfe0"
app:itemTextColor="#000000"
app:itemIconTint="#000000"
android:layout_gravity="start"
app:headerLayout="@layout/nav_header"
android:id="@+id/nv">

</android.support.design.widget.NavigationView>



    </android.support.v4.widget.DrawerLayout>