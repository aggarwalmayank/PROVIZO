        <activity android:name=".MyTempooBookings" />
        <activity
            android:name=".TempooService"
            android:windowSoftInputMode="stateHidden|adjustResize|adjustPan" />
        <activity
            android:name=".DeliveryTempoo"
            android:windowSoftInputMode="stateHidden|adjustResize|adjustPan" />
        <activity
            android:name=".Bookingchoice"
            android:windowSoftInputMode="stateHidden|adjustResize|adjustPan" />
        <activity
            android:name=".CompanyInfo"
            android:windowSoftInputMode="stateHidden|adjustResize|adjustPan" />
        <activity android:name=".PartnerBookingDetails" />
        <activity android:name=".PartnerBooking" />
        <activity android:name=".Support" />
        <activity android:name=".BookingsDetails" />
        <activity android:name=".MyBookings" />
        <activity android:name=".Payment" />
        <activity android:name=".Confirmation" />
        <activity android:name=".CompletedTempoo" />
        <activity android:name=".AvailableServices" />
        <activity
            android:name=".Partner"
            android:launchMode="singleTask" />
        <activity android:name=".RateChart" />
        <activity android:name=".ViewCards" />
        <activity android:name=".AddCard" />
        <activity android:name=".AboutUs" />
        <activity android:name=".completed" />
        <activity
            android:name=".consignee_details"
            android:windowSoftInputMode="stateHidden|adjustResize|adjustPan" />
        <activity
            android:name=".consignor_details"
            android:windowSoftInputMode="stateHidden|adjustResize|adjustPan" />
        <activity android:name=".SplashScreenCircular">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SignUp"
            android:windowSoftInputMode="stateHidden|adjustResize|adjustPan" />
        <activity
            android:name=".SignInUp"
            android:windowSoftInputMode="stateHidden|adjustResize|adjustPan" />
        <activity
            android:name=".SignUpSecond"
            android:windowSoftInputMode="stateHidden|adjustResize|adjustPan" />
        <activity
            android:name=".DeliveryLocation"
            android:windowSoftInputMode="stateHidden|adjustResize|adjustPan"
            android:launchMode="singleTask"/>
        <activity
            android:name=".SelectServiceTruck"
            android:windowSoftInputMode="stateHidden|adjustResize|adjustPan"
            android:launchMode="singleTask"/>
