<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Confirmation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/provizo_bg1" />

        <TextView
            android:id="@+id/appnamesigninup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="90dp"
            android:paddingStart="20dp"
            android:paddingLeft="20dp"
            android:paddingEnd="20dp"
            android:paddingRight="20dp"
            android:text="@string/app_name"
            android:textColor="#000000"
            android:textSize="45sp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:layout_marginTop="18dp"
                android:id="@+id/pickup"
                android:textColor="#000000"
                android:textSize="20sp"
                android:text="jaipur"
                android:gravity="center"
                android:drawableLeft="@drawable/ring"
                android:layout_width="250dp"
                android:layout_height="wrap_content" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_marginTop="2dp"
                android:background="@android:color/darker_gray"/>
            <TextView
                android:textSize="20sp"
                android:layout_marginTop="18dp"
                android:id="@+id/drop"
                android:gravity="center"
                android:drawableLeft="@drawable/markerpin"
                android:layout_width="250dp"
                android:textColor="#000000"
                android:layout_height="wrap_content" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_marginTop="2dp"
                android:background="@android:color/darker_gray"/>
            <TextView
                android:textSize="20sp"
                android:layout_marginTop="18dp"
                android:drawableLeft="@drawable/calendaricon"
                android:layout_width="250dp"
                android:gravity="center"
                android:textColor="#000000"
                android:id="@+id/date"
                android:layout_height="wrap_content" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_marginTop="2dp"
                android:background="@android:color/darker_gray"/>
            <TextView
                android:textSize="20sp"
                android:layout_marginTop="18dp"
                android:drawableLeft="@drawable/ratechart"
                android:id="@+id/amount"
                android:gravity="center"
                android:textColor="#000000"
                android:layout_width="250dp"
                android:drawableRight="@drawable/downarrow"
                android:layout_height="wrap_content" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_marginTop="2dp"
                android:background="@android:color/darker_gray"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Back"
                    android:id="@+id/back"
                    android:background="@drawable/ripple_effect_2"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_marginLeft="30dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Book"
                    android:id="@+id/book"
                    android:background="@drawable/ripple_effect_2"/>
            </LinearLayout>

        </LinearLayout>

       
    </RelativeLayout>

</LinearLayout>