<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/black_gradient_background"
    tools:context=".BookingsDetails">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:paddingBottom="20dp">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/appsignup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:paddingLeft="20dp"
                android:paddingEnd="20dp"
                android:paddingRight="20dp"
                android:text="Booking Details"
                android:textColor="#FFF"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:fontFamily="sans-serif-light"/>

        </android.support.v7.widget.Toolbar>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#FFF"
            android:layout_below="@id/toolbar"/>

        <TextView
            android:id="@+id/order_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Order ID"
            android:textColor="#FFF"
            android:layout_marginStart="10dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_below="@id/toolbar"/>

        <TextView
            android:id="@+id/truck_comp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_id"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:text="Order ID"
            android:textColor="#FFF"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/pick_loc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/truck_comp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:text="Order ID"
            android:textColor="#FFF"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/drop_loc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pick_loc"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:text="Order ID"
            android:textColor="#FFF"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/pick_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/drop_loc"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:text="Order ID"
            android:textColor="#FFF"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pick_date"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:text="Order ID"
            android:textColor="#FFF"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/consignee_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/amount"
            android:textColor="#FFF"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:text="Consignee Details"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/consignee_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/consignee_details"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:text="Order ID"
            android:textColor="#FFF"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/consignee_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/consignee_name"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:text="Order ID"
            android:textColor="#FFF"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/consignee_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/consignee_address"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:text="Order ID"
            android:textColor="#FFF"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/consignee_gst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/consignee_phone"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:text="Order ID"
            android:textColor="#FFF"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/consignor_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/consignee_gst"
            android:textColor="#FFF"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:text="Consignor Details"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/consignor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/consignor_details"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:text="Order ID"
            android:textColor="#FFF"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/consignor_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/consignor_name"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:textColor="#FFF"
            android:text="Order ID"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/consignor_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/consignor_address"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:text="Order ID"
            android:textColor="#FFF"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/consignor_gst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/consignor_phone"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:text="Order ID"
            android:textColor="#FFF"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/truck_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/consignor_gst"
            android:textColor="#FFF"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:text="Service Truck Details"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/service_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/truck_details"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:text="Order ID"
            android:textColor="#FFF"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/service_type"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:text="Order ID"
            android:textColor="#FFF"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/truck_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/desc"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:text="Order ID"
            android:textColor="#FFF"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/truck_type"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:text="Order ID"
            android:textColor="#FFF"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/weight"
            android:textColor="#FFF"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:text="mode"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/risk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mode"
            android:textColor="#FFF"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="risk"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/risk"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/rateurorder"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="Rate your Booking experience "
                android:textColor="#FFF" />

            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_marginTop="3dp"
                android:theme="@style/RatingBar"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:hint="Write Here"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/ratetext"
                android:textColor="#ffffff"
                android:maxLength="30"
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ ,0123456789"
                android:textColorHint="#ffffff"
                android:background="@drawable/ripple_effect"/>
            <Button
                android:layout_marginTop="3dp"
                android:id="@+id/submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#FFF"
                android:text="Submit"
                android:background="@drawable/ripple_effect_2"/>

        </LinearLayout>
    </RelativeLayout>
</ScrollView>