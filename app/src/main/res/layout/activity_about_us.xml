<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9CADB6"
    tools:context=".AboutUs">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="32dp"
        android:background="#c8dfe0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.9"
            android:background="#c8dfe0"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="About Us"
                android:gravity="center"
                android:textStyle="bold"
                android:padding="8dp"
                android:textColor="#000000"
                android:textSize="21sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="India's pioneer app based online Transport Booking platform that connects users to Transport Goods,Hire a Truck with a network of thousands Truck drivers for Quick and Prompt Goods Delivery Option."
                android:textColor="#000000"
                android:textSize="15sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Our Vision"
                android:textStyle="bold"
                android:padding="10dp"
                android:textColor="#000000"
                android:textSize="19sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:textColor="#000000"
                android:textSize="15sp"
                android:text="To Help all the people in the transportation industry like customers, importers, transporters, truckers and other service providers to come under one platform to provide better service to their customers."/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="The Goal"
                android:padding="10dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="19sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:textColor="#000000"
                android:textSize="15sp"
                android:text="Produce smoother user flow between core functions of the application in the orser they are most often utilised."/>
        </LinearLayout>
    </ScrollView>


</LinearLayout>

