<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/deliverylocation"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/select_service_truck_background3"
            android:scaleType="centerCrop"/>

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/appsignup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-light"
                android:paddingStart="20dp"
                android:paddingLeft="20dp"
                android:paddingEnd="20dp"
                android:paddingRight="20dp"
                android:text="Provizo"
                android:textColor="#FFF"
                android:textSize="25sp"
                android:textStyle="bold" />

        </android.support.v7.widget.Toolbar>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/toolbar"
            android:background="#FFF" />

        <ImageView
            android:id="@+id/menuicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/nine_circles_white" />

        <TextView
            android:id="@+id/select_truck_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_truck_text"
            android:layout_centerHorizontal="true"
            android:textSize="25sp"
            android:textColor="#FFF"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:fontFamily="sans-serif-light"
            android:layout_below="@id/toolbar"/>

        <Spinner
            android:id="@+id/servicetype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/select_truck_text"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/spinner_rect"
            android:gravity="center"
            android:spinnerMode="dropdown"
            android:textAlignment="center"
            android:layout_marginTop="50dp"
            style="@style/mySpinnerItemStyle" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_below="@id/servicetype"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="#FFF" />

        <EditText
            android:id="@+id/materialdesp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/servicetype"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            android:backgroundTint="#FFF"
            android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789-/."
            android:gravity="center"
            android:hint="Material Description"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="#FFF"
            android:textColorHint="#FFF"
            android:textCursorDrawable="@drawable/cursor_color"/>


        <EditText
            android:id="@+id/weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/materialdesp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            android:backgroundTint="#FFF"
            android:digits="1234567890."
            android:gravity="center"
            android:hint="Weight"
            android:inputType="number"
            android:maxLines="1"
            android:textColor="#FFF"
            android:textColorHint="#FFF"
            android:textCursorDrawable="@drawable/cursor_color"/>

        <RadioGroup
            android:id="@+id/radiogroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/weight"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <RadioButton
                android:id="@+id/radiobtn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#FFF"
                android:text="Kg"
                android:textColor="#fff" />

            <RadioButton
                android:id="@+id/radiobtn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#FFF"
                android:checked="false"
                android:text="Quintal"
                android:textColor="#FFF" />

            <RadioButton
                android:id="@+id/radiobtn3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#FFF"
                android:checked="false"
                android:text="Tonne"
                android:textColor="#FFF" />

        </RadioGroup>

        <Spinner
            android:id="@+id/truckspinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/radiogroup"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/spinner_rect"
            android:gravity="center"
            android:textAlignment="center"
            style="@style/mySpinnerItemStyle"
            android:layout_marginTop="15dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_below="@id/truckspinner"
            android:layout_marginStart="10dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="10dp"
            android:background="#FFF" />

        <Button
            android:id="@+id/servicesbuttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/truckspinner"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/ripple_effect_2"
            android:clickable="false"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:scaleType="centerInside"
            android:text="Continue"
            android:textColor="#fff" />
    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#c8dfe0"
        app:headerLayout="@layout/nav_header"
        app:itemIconTint="#000000"
        app:itemTextColor="#000000"
        app:menu="@menu/navigation_menu">

    </android.support.design.widget.NavigationView>


</android.support.v4.widget.DrawerLayout>