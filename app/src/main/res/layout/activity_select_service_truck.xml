<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/deliverylocation"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".DeliveryLocation"
    android:background="#EBEEF1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <ImageView
            android:id="@+id/first"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/first_new"
            android:scaleType="centerCrop"/>

        <ImageView
            android:id="@+id/menuicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:src="@drawable/menuicon"/>


        <TextView
            android:id="@+id/appnamesignupsecond"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="90dp"
            android:paddingStart="20dp"
            android:paddingLeft="20dp"
            android:paddingEnd="20dp"
            android:paddingRight="20dp"
            android:text="@string/app_name"
            android:textColor="#000000"
            android:textSize="45sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:layout_centerInParent="true"
            android:layout_below="@id/first"
            android:layout_above="@id/third">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/box" />

                <Spinner
                    android:id="@+id/servicetype"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/spinner_rect"
                    android:gravity="center"
                    android:spinnerMode="dropdown"
                    android:textAlignment="center" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_marginTop="1dp"
                android:background="@android:color/darker_gray" />

            <EditText
                android:id="@+id/materialdesp"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789-/."
                android:layout_marginTop="12dp"
                android:drawableLeft="@drawable/deliverpack"
                android:gravity="center"
                android:hint="Material Description"
                android:inputType="text" />


            <EditText
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/weight"
                android:id="@+id/weight"
                android:layout_marginTop="8dp"
                android:maxLines="1"
                android:inputType="number"
                android:digits="1234567890."
                android:gravity="center"
                android:hint="Weight" />

            <RadioGroup
                android:id="@+id/radiogroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/radiobtn1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kg" />

                <RadioButton
                    android:id="@+id/radiobtn2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="Quintal" />

                <RadioButton
                    android:id="@+id/radiobtn3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="Tonne" />

            </RadioGroup>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/deliverytruck" />

                <Spinner
                    android:id="@+id/truckspinner"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/spinner_rect"
                    android:gravity="center"
                    android:textAlignment="center" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_marginTop="1dp"
                android:background="@android:color/darker_gray" />

            <ImageButton
                android:id="@+id/servicesbuttons"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:background="@drawable/ripple_effect_2"
                android:clickable="false"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/right_pointer" />

        </LinearLayout>

        <ImageView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/third"
            android:layout_alignParentBottom="true"
            android:src="@drawable/third"
            android:scaleType="centerCrop"/>

        <ImageView
            android:layout_width="290dp"
            android:layout_height="290dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="180dp"
            android:layout_marginBottom="-80dp"
            android:src="@drawable/truck1" />
    </RelativeLayout>
</LinearLayout>
    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/navigation_menu"
        android:background="#c8dfe0"
        app:itemTextColor="#000000"
        app:itemIconTint="#000000"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        android:id="@+id/nv">

    </android.support.design.widget.NavigationView>



</android.support.v4.widget.DrawerLayout>